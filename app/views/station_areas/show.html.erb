<%- model_class = StationArea -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @station_area.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:station_name) %>:</strong></dt>
  <dd><%= @station_area.station_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:etod_score) %>:</strong></dt>
  <dd><%= @station_area.etod_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vehicle_miles_traveled) %>:</strong></dt>
  <dd><%= @station_area.vehicle_miles_traveled %></dd>
  <dt><strong><%= model_class.human_attribute_name(:transit_commute_share) %>:</strong></dt>
  <dd><%= @station_area.transit_commute_share %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vehicle_ownership) %>:</strong></dt>
  <dd><%= @station_area.vehicle_ownership %></dd>
  <dt><strong><%= model_class.human_attribute_name(:transportation_ghgs) %>:</strong></dt>
  <dd><%= @station_area.transportation_ghgs %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              station_areas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_station_area_path(@station_area), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              station_area_path(@station_area),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
